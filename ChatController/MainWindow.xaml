        <TextBox x:Name="ChatWindowCommand" HorizontalAlignment="Left" Height="28" Margin="-315,100,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="301" Grid.Row="2" Background="#FF666666" FontFamily="Tw Cen MT" FontSize="20" Grid.RowSpan="2"/>

    </Grid>
</Window>
