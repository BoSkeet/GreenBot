        <TextBox x:Name="userNameTB" HorizontalAlignment="Left" Height="34" Margin="0,41,0,0" TextWrapping="Wrap" Text="Enter UserName" VerticalAlignment="Top" Width="193" Background="#FF0051FF" FontFamily="Tw Cen MT" FontWeight="Bold" FontStyle="Italic" FontSize="24" OpacityMask="Black" Opacity="0.6" AutomationProperties.IsOffscreenBehavior="Onscreen" TextChanged="TextBox_TextChanged" Grid.Row="1"/>
